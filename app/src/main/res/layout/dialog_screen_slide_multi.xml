<!-- fragment_screen_slide_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"

    android:elevation="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lkk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/klkl">

        <ImageView
            android:id="@+id/ivLargeSari"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/n4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/klkl"
        android:layout_width="match_parent"
        android:layout_height="110dp"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <com.takemysaree.fonts.LatoBoldTextview
            android:id="@+id/titleofproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="title"
            android:textSize="18dp"
            android:textColor="@color/colorActionBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/buyl"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.takemysaree.fonts.LatoBoldTextview
                    android:id="@+id/retailprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500"
                    android:textColor="@color/colorActionBar"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
android:id="@+id/buyitem"

                    android:orientation="vertical">

                    <com.takemysaree.fonts.LatoBoldTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_rectangle"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
android:textColor="#fff"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:text="Buy" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rentl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="right"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.takemysaree.fonts.LatoBoldTextview
                    android:id="@+id/rentprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500"

                    android:textColor="@color/colorActionBar"
               />

                <LinearLayout
                    android:id="@+id/rentitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.takemysaree.fonts.LatoBoldTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_rectangle"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
android:textColor="#fff"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:text="Rent" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>