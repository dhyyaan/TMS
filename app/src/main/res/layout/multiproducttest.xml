<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:id="@+id/toolbars"

        android:orientation="horizontal"

        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/ivHamburger"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow" />
        <com.takemysaree.fonts.LatoBoldTextview
            android:layout_width="wrap_content"
            android:text="Offers"
            android:id="@+id/title"
            android:textSize="18sp"
            android:textColor="@color/whitecolor"
            android:layout_height="match_parent"
            android:gravity="center"

            />


    </LinearLayout>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l1"
            android:visibility="gone"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image1"
                    android:src="@drawable/n5" />

                <com.takemysaree.fonts.LatoExtraBoldTextview

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".6"

                    android:background="@drawable/circlewhte"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l2"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image12"
                    android:src="@drawable/n5" />

                <com.takemysaree.fonts.LatoExtraBoldTextview

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".6"

                    android:background="@drawable/circlewhte"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l3"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image13"
                    android:src="@drawable/n5" />

                <com.takemysaree.fonts.LatoExtraBoldTextview

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".6"

                    android:background="@drawable/circlewhte"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l4"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image14"
                    android:src="@drawable/n5" />

                <com.takemysaree.fonts.LatoExtraBoldTextview

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".6"

                    android:background="@drawable/circlewhte"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/l5"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image15"
                    android:src="@drawable/n5" />

                <com.takemysaree.fonts.LatoExtraBoldTextview

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".6"

                    android:background="@drawable/circlewhte"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbars"
        android:layout_height="match_parent"
        android:layout_above="@+id/postproduct"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.takemysaree.fonts.LatoBoldTextview
        android:id="@+id/postproduct"
android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="POST"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"

        />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>