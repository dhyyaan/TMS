<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:alpha=".8"
    android:background="#000"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"

        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/close"
        android:id="@+id/clse"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content" />
    <com.takemysaree.fonts.LatoBoldTextview
        android:layout_width="wrap_content"
        android:textSize="18sp"
android:id="@+id/productnme"
        android:layout_marginTop="8dp"

        android:textColor="@color/whitecolor"
        android:layout_height="wrap_content"
        android:gravity="center"

        />
    <com.takemysaree.fonts.LatoBoldTextview
        android:layout_width="wrap_content"
        android:textSize="18sp"
android:id="@+id/pdpreice"
        android:layout_marginTop="1dp"

        android:textColor="@color/whitecolor"
        android:layout_height="wrap_content"
        android:gravity="center"

        />

    <com.takemysaree.fonts.LatoRegularTextview
        android:layout_width="wrap_content"
        android:textSize="18sp"

        android:layout_marginTop="8dp"
        android:text="Description"
        android:textColor="@color/whitecolor"
        android:layout_height="wrap_content"
        android:gravity="center"

        />


    <WebView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:alpha=".8"
android:background="#000"
        android:layout_marginTop="5dp"
        android:layout_height="200dp" />
    <com.takemysaree.fonts.LatoRegularTextview
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_corners1"
android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/dstnce"
        android:drawableLeft="@drawable/gpss"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        android:text="5.5 miles away from you"
        android:textColor="@color/solid_black"
        android:layout_height="?attr/actionBarSize"
        android:gravity="left|center"

        />
        <com.takemysaree.fonts.LatoRegularTextview
            android:layout_width="match_parent"
            android:textSize="18sp"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:text="This Product is from Canada"
            android:textColor="@color/whitecolor"
            android:layout_height="wrap_content"
            android:gravity="left|center"

            />
    <com.takemysaree.fonts.LatoRegularTextview
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_corners1"
        android:paddingLeft="@dimen/activity_horizontal_margin"

        android:layout_marginTop="16dp"
        android:text="Hi,is it still available"
        android:textColor="@color/solid_black"
        android:layout_height="?attr/actionBarSize"
        android:gravity="left|center"


        />
    <com.takemysaree.fonts.LatoRegularTextview
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_corners1"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Save"
        android:textColor="@color/solid_black"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"

        />
</LinearLayout>
</ScrollView>