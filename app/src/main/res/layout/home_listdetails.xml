<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl1"

android:layout_marginTop="@dimen/activity_horizontal_margin"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="4dp"
        android:id="@+id/relclick"
        android:background="@drawable/rounded_corners"
        android:elevation="3sp">
    <ImageView
        android:id="@+id/imageview1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal|top"
            android:alpha=".1"
            android:background="@drawable/round_rectangleblack" />
    <ImageView
        android:id="@+id/sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        android:src="@drawable/sold" />

    <ImageView
        android:id="@+id/rented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        android:src="@drawable/rented"
        android:visibility="gone" />

    <com.takemysaree.fonts.LatoExtraBoldTextview
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="12dp"
       android:layout_marginLeft="8dp"
        android:background="@drawable/rounded_corners"
        android:elevation="2dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="Ad"
        android:textColor="@color/colorActionBar"
        android:textSize="10sp" />
    </RelativeLayout>
</FrameLayout>

