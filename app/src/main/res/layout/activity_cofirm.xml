<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <RelativeLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:background="@color/colorAccent"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHamburger"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/close" />

        <com.takemysaree.fonts.LatoBoldTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_centerInParent="true"
            android:text="Order Confirmation"
            android:textColor="@color/whitecolor"
            android:textSize="18sp"

            />


    </RelativeLayout>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/imageView"
        android:layout_centerInParent="true"
        android:src="@drawable/tnkus" />
    <com.takemysaree.fonts.LatoBoldTextview
        android:layout_width="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/imageViewd"
        android:textColor="@color/colorActionBar"
     android:text="Your order was successfully submitted." />

    <com.takemysaree.fonts.LatoBoldTextview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/imageView1"
        android:layout_below="@+id/imageViewd"
        android:textColor="@color/colorActionBar"
        android:text="Thanks you for choosing Take My Sari." />


</RelativeLayout>
