<!-- fragment_screen_slide_page.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"

    android:elevation="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/ivLargeSari"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:scaleType="centerCrop"
            app:srcCompat="@drawable/emptyimage1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
android:visibility="gone"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <com.takemysaree.fonts.LatoBoldTextview
            android:id="@+id/titleofproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="title"
            android:textColor="@color/colorActionBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/buyl"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.takemysaree.fonts.LatoBoldTextview
                    android:id="@+id/retailprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500"
                    android:textColor="@color/colorActionBar"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"


                    android:orientation="vertical">

                    <com.takemysaree.fonts.LatoBoldTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_rectangleborder"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"

                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:text="Buy" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rentl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.takemysaree.fonts.LatoBoldTextview
                    android:id="@+id/rentprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500"
                    android:textColor="@color/colorActionBar"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"

                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.takemysaree.fonts.LatoBoldTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_rectangleborder"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"

                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:text="Rent" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>