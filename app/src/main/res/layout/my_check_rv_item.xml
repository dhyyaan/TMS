<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:paddingTop="12dp"

    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSariTitle"
        app:srcCompat="@drawable/n1" />

    <com.takemysaree.fonts.LatoBoldTextview
        android:id="@+id/tvLOrderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#151515"
        android:textSize="14sp"
        android:text="Silk Satin Printed Stole"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/tvLOrderid"
    android:layout_toEndOf="@+id/imageView"
    android:layout_toRightOf="@+id/imageView"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:id="@+id/klkl"
    android:layout_height="wrap_content">

    <com.takemysaree.fonts.LatoRegularTextview
        android:id="@+id/tvLSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:visibility="gone"

        android:textColor="#262626"
        android:textSize="14sp"
        android:text="Size:" />

    <com.takemysaree.fonts.LatoRegularTextview
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLSize"
        android:layout_toEndOf="@+id/tvLSize"
        android:layout_toRightOf="@+id/tvLSize"
        android:textSize="14sp"
        android:visibility="gone"
android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:textColor="#56CFBE"
        android:text="44" />

    <com.takemysaree.fonts.LatoRegularTextview
        android:id="@+id/tvLQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSize"
        android:layout_toEndOf="@+id/tvSize"
        android:layout_toRightOf="@+id/tvSize"
        android:textColor="#fc7c71"

        android:textSize="14sp"
        android:text="Quantity:" />

    <com.takemysaree.fonts.LatoRegularTextview
        android:id="@+id/tvQty" android:textColor="#fc7c71"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLQty"
        android:layout_toEndOf="@+id/tvLQty"
        android:layout_toRightOf="@+id/tvLQty"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"

        android:text="1" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/imageView"


    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_height="wrap_content">
    <com.takemysaree.fonts.LatoRegularTextview

        android:layout_width="0dp"
        android:layout_height="wrap_content"
android:id="@+id/prctext"
android:layout_weight="1"

        android:textColor="#262626"
        android:textSize="14sp"
        android:text="Price" />

    <com.takemysaree.fonts.LatoRegularTextview

        android:layout_width="0dp"
        android:layout_height="wrap_content"
android:id="@+id/price"
android:layout_weight="1"
        android:gravity="right"
        android:textColor="#151515"
        android:text="$45" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/rentsecure"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content">
        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textColor="#262626"
            android:textSize="14sp"
            android:text="Rent Security" />

        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rentscre"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#151515"
            android:text="$45" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content">
        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textColor="#262626"
            android:textSize="14sp"
            android:text="Tax" />

        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"
android:id="@+id/tax"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#151515"
            android:text="$45" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_height="wrap_content">
        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textColor="#262626"
            android:textSize="14sp"
            android:text="Shipping Charges" />

        <com.takemysaree.fonts.LatoRegularTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/shpngchrge"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#151515"
            android:text="$45" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
android:paddingBottom="10dp"
        android:id="@+id/dur"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content">
        <com.takemysaree.fonts.LatoBoldTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textColor="#262626"
            android:textSize="14sp"
            android:text="Sub Total" />

        <com.takemysaree.fonts.LatoBoldTextview

            android:layout_width="0dp"
            android:layout_height="wrap_content"
android:id="@+id/subtotl"

            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#fc7c71"
            android:text="$45" />

    </LinearLayout>
</LinearLayout>




</RelativeLayout>
    </android.support.v7.widget.CardView>
